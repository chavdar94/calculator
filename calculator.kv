<Button>
    background_normal: ''
    background_color: (66/255, 66/255, 64/255,1)

<CalculatorWidget>
    BoxLayout
        orientation: "vertical"
        size: root.width, root.height

        TextInput:
            id: input_box
            text: '0'
            font_size: 43
            multiline: False
            halign: "right"
            size_hint: (1, 0.19)
            foreground_color: (1,1,1,1)
            background_color: (17/255, 18/255, 18/255,1)

        GridLayout:
            cols: 4
            rows: 5

            #### row 1 ####
            Button:
                text: '%'
                font_size: 32
                on_release: root.signs("%")
                background_color: (41/255, 44/255, 48/255,1)

            Button:
                text: 'C'
                font_size: 32
                on_release: root.clear()
                background_color: (41/255, 44/255, 48/255,1)

            Button:
                text: u'\u00AB'
                font_size: 32
                on_release: root.remove_last_sign()
                background_color: (41/255, 44/255, 48/255,1)

            Button:
                text: '/'
                font_size: 32
                on_release: root.signs("/")
                background_color: (41/255, 44/255, 48/255,1)

            #### row 2 ####

            Button:
                text: '7'
                font_size: 32
                on_release: root.button_value(7)

            Button:
                text: '8'
                font_size: 32
                on_release: root.button_value(8)

            Button:
                text: '9'
                font_size: 32
                on_release: root.button_value(9)

            Button:
                text: 'X'
                font_size: 32
                on_release: root.signs("*")
                background_color: (41/255, 44/255, 48/255,1)

            #### row 3 ####

            Button:
                text: '4'
                font_size: 32
                on_release: root.button_value(4)

            Button:
                text: '5'
                font_size: 32
                on_release: root.button_value(5)

            Button:
                text: '6'
                font_size: 32
                on_release: root.button_value(6)

            Button:
                text: '-'
                font_size: 32
                on_release: root.signs("-")
                background_color: (41/255, 44/255, 48/255,1)

            #### row 4 ####

            Button:
                text: '1'
                font_size: 32
                on_release: root.button_value('1')

            Button:
                text: '2'
                font_size: 32
                on_release: root.button_value(2)

            Button:
                text: '3'
                font_size: 32
                on_release: root.button_value(3)

            Button:
                text: '+'
                font_size: 32
                on_release: root.signs("+")
                background_color: (41/255, 44/255, 48/255,1)

            #### row 5 ####

            Button:
                text: '+/-'
                font_size: 32
                on_release: root.positive_negative()

            Button:
                text: '0'
                font_size: 32
                on_release: root.button_value(0)

            Button:
                text: '.'
                font_size: 32
                on_release: root.dot()

            Button:
                text: '='
                font_size: 32
                on_release: root.results()
                background_color: (41/255, 44/255, 48/255,1)
